{
	"name": "shadow-reader-enhance",
	"displayName": "shadow reader enhanced",
	"description": "Boss is coming! 注意隐蔽！",
	"version": "0.8.4",
	"publisher": "EWinner1",
	"engines": {
		"vscode": "^1.54.0"
	},
	"icon": "images/icon.jpeg",
	"categories": [
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/EWinner1/shadowReader.git"
	},
	"homepage": "https://github.com/EWinner1/shadowReader/blob/main/README.md",
	"main": "./out/extension.js",
	"activationEvents": [],
	"contributes": {
		"configuration": {
			"title": "shadow reader",
			"properties": {
				"shadowReader.pageSize": {
					"type": "number",
					"default": 50,
					"description": "每次最多显示字数"
				},
				"shadowReader.onlineBookURL": {
					"type": "string",
					"default": "https://www.biqugee6.com",
					"enum": [
						"https://www.caimoge.net",
						"https://www.biqugee6.com"
					],
					"enumDescriptions": [
						"采墨阁",
						"笔趣E"
					],
					"description": "在线书源"
				},
				"shadowReader.hiddenTime": {
					"type": "number",
					"default": 30,
					"description": "自动隐藏时间"
				},
				"shadowReader.bossStatusMsg": {
					"type": "string",
					"default": "Hello world",
					"description": "Boss状态默认静态文本"
				}
			}
		},
		"keybindings": [
			{
				"command": "shadowReader.getNextPage",
				"key": "alt+."
			},
			{
				"command": "shadowReader.getPrevPage",
				"key": "alt+,"
			},
			{
				"command": "shadowReader.showBossInfo",
				"key": "alt+/"
			}
		],
		"commands": [
			{
				"command": "shadowReader.start",
				"title": "开始工作",
				"category": "shadowReader",
				"icon": "$(book)"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "shadowReader.start",
					"alt": "markdown.showPreviewToSide",
					"group": "navigation"
				}
			]
		},
		"capabilities": {
			"hoverProvider": "true"
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"webpack-prod": "webpack --mode production",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"webpack-dev-config": "webpack --config webpack.config.js --progress"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.54.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"ts-loader": "^9.4.2",
		"typescript": "^4.9.5",
		"vscode-test": "^1.5.0",
		"webpack": "^5.75.0",
		"webpack-bundle-analyzer": "^4.8.0",
		"webpack-cli": "^5.0.1"
	},
	"dependencies": {
		"axios": "^0.21.1",
		"chardet": "^1.3.0",
		"cheerio": "^1.0.0-rc.5",
		"generator-code": "^1.7.3",
		"htmlparser2": "^8.0.1",
		"https-browserify": "^1.0.0",
		"iconv-lite": "^0.6.2",
		"path": "^0.12.7",
		"querystring-es3": "^0.2.1",
		"stream-http": "^3.2.0",
		"url": "^0.11.0",
		"yo": "^4.3.1"
	}
}